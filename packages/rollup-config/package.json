    "rollup-plugin-typescript2": "^0.31.1"
  },
  "devDependencies": {
    "@monorepo-template/jest-module-preset": "workspace:^",
    "@types/jest": "^27.4.0",
    "eslint": "^8.7.0",
    "jest": "^27.5.1",
    "rollup": "^2.66.1",
    "typescript": "^4.5.5"
