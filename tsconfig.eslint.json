{
  "exclude": [".git", ".vscode", ".yarn"],
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "noEmit": true,
    "sourceMap": false
  },

  "include": [
    "**/.eslintrc.cjs",
    "**/.eslintrc.json",
    "**/*.cjs",
    "**/*.d.ts",
    "**/*.js",
    "**/*.json",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    "**/*.yml"
  ]
}
